<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/custom_product_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_product_vendor_name"
                style="@style/text_14"
                android:textColor="@color/gray1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custom_product_name"
                style="@style/text_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/custom_product_after_discount_price"
                    style="@style/text_14" />

                <TextView
                    android:id="@+id/custom_product_price"
                    style="@style/text_13"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textColor="@color/gray1" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/custom_product_discount"
                    style="@style/text_12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>