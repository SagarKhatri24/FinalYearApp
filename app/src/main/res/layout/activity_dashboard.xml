<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/dashboard_name"
        android:text="Welcome"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        style="@style/text_20"/>

    <Button
        android:id="@+id/dashboard_profile"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Profile"
        style="@style/button_15"/>

    <Button
        android:id="@+id/dashboard_logout"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Logout"
        style="@style/button_15"/>

    <Button
        android:id="@+id/dashboard_delete_account"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Delete Account"
        style="@style/button_15"/>

    <Button
        android:id="@+id/dashboard_category"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Category Using ListView"
        style="@style/button_15"/>

</LinearLayout>