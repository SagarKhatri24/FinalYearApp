<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProductDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/product_detail_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_detail_vendor_name"
                    style="@style/text_14"
                    android:textColor="@color/gray1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_detail_name"
                    style="@style/text_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/product_detail_after_discount_price"
                        style="@style/text_14" />

                    <TextView
                        android:id="@+id/product_detail_price"
                        style="@style/text_13"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textColor="@color/gray1" />

                    <TextView
                        android:id="@+id/product_detail_discount"
                        style="@style/text_12"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center">

<!--                    <ImageView-->
<!--                        android:id="@+id/product_detail_wishlist_empty"-->
<!--                        android:layout_width="@dimen/_30sdp"-->
<!--                        android:layout_height="@dimen/_30sdp"-->
<!--                        android:layout_marginRight="@dimen/_8sdp"-->
<!--                        android:src="@drawable/wishlist_empty"-->
<!--                        />-->

<!--                    <ImageView-->
<!--                        android:id="@+id/product_detail_wishlist_fill"-->
<!--                        android:layout_width="@dimen/_30sdp"-->
<!--                        android:layout_height="@dimen/_30sdp"-->
<!--                        android:layout_marginRight="@dimen/_8sdp"-->
<!--                        android:src="@drawable/wishlist_fill"-->
<!--                        android:visibility="gone"-->
<!--                        />-->

                    <ImageView
                        android:id="@+id/product_detail_wishlist"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/wishlist_empty"
                        />

                    <ImageView
                        android:id="@+id/product_detail_cart"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/cart"
                        />

                    <LinearLayout
                        android:id="@+id/product_detail_cart_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/product_detail_cart_minus"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/substract"
                            />

                        <TextView
                            android:id="@+id/product_detail_cart_qty"
                            style="@style/text_20"
                            android:text="1"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            />

                        <ImageView
                            android:id="@+id/product_detail_cart_plus"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/add"
                            />



                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

